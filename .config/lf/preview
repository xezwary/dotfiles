#!/bin/sh

image() {
	if [ -n "$DISPLAY" ]; then
    kitty +kitten icat --stdin no --transfer-mode memory --place "$2x$3@$4x$5" "$1" < /dev/null > /dev/tty
		exit 1
	else
		chafa "$1" -f symbols -s "$4x" --dither diffusion -c 240
	fi
}

batorcat() {
	file="$1"
	shift
	if command -v bat > /dev/null 2>&1
	then
		bat --color=always --style=plain --pager=never "$file" "$@"
	else
		cat "$file"
	fi
}

glowormdcat() {
  file="$1"
  shift
  if command -v glow > /dev/null 2>&1
  then
    glow -s dark "$file"
  else
    mdcat "$file"
  fi
}

[ ! -d "$HOME/.cache/lf" ] && mkdir --parents "$HOME/.cache/lf"
CACHE="$HOME/.cache/lf/thumbnail.$(stat --printf '%n\0%i\0%F\0%s\0%W\0%Y' -- "$(readlink -f "$1")" | sha256sum | awk '{print $1}'))"

case "$(printf "%s\n" "$(readlink -f "$1")" | awk '{print tolower($0)}')" in
	*.tgz|*.tar.gz) tar tzf "$1" ;;
	*.tar.bz2|*.tbz2) tar tjf "$1" ;;
	*.tar.txz|*.txz) xz --list "$1" ;;
	*.tar) tar tf "$1" ;;
	*.zip|*.jar|*.war|*.ear|*.oxt) unzip -l "$1" ;;
  *.gz) gzip -l "$1" ;;
	*.rar) unrar l "$1" ;;
  *.md) glowormdcat "$1" ;;
	*.7z) 7z l "$1" ;;
	*.[1-8]) man "$1" | col -b ;;
	*.o) nm "$1";;
	*.torrent) transmission-show "$1" ;;
	*.iso) iso-info --no-header -l "$1" ;;
	*.odt|*.ods|*.odp|*.sxw) odt2txt "$1" ;;
	*.doc) catdoc "$1" ;;
	*.docx) docx2txt "$1" ;;
  *.xml|*.html) w3m -dump "$1";;
	*.xls|*.xlsx|*.xltx)
		ssconvert --export-type=Gnumeric_stf:stf_csv "$1" "fd://1" | batorcat --language=csv
		;;
	*.wav|*.mp3|*.flac|*.m4a|*.wma|*.ape|*.ac3|*.og[agx]|*.spx|*.opus|*.as[fx]|*.mka)
		[ ! -f "${CACHE}.jpg" ]&&ffmpeg -i "$1" -f lavfi -i color=c=black:s=850x150 -filter_complex "[0:a]aformat=channel_layouts=mono,showwavespic=s=850x150:colors=white[fg];[1:v][fg]overlay=format=auto" -frames:v 1 "$CACHE.jpg";kitty +kitten icat --stdin no --transfer-mode memory --place "$2x$3@$4x$5" "${CACHE}.jpg" < /dev/null > /dev/tty&&echo -en "\n\n\n\n\n";exiftool "$1";exit 1
		;;
	*.pdf)
		[ ! -f "${CACHE}.jpg" ] && \
			pdftoppm -jpeg -f 1 -singlefile "$1" "$CACHE"
		image "${CACHE}.jpg" "$2" "$3" "$4" "$5"
		;;
	*.epub|*.mobi)
		[ ! -f "$CACHE" ] && \
			gnome-epub-thumbnailer -s 1024 "$1" "$CACHE.jpg"
		image "$CACHE.jpg" "$2" "$3" "$4" "$5"
		;;
	*.cbz|*.cbr|*.cbt)
		[ ! -f "$CACHE" ] && \
			~/Documents/git/mcomix-git/comicthumb "$1" "$CACHE" 1024
		image "$CACHE" "$2" "$3" "$4" "$5"
		;;
	*.avi|*.mp4|*.wmv|*.dat|*.3gp|*.ogv|*.mkv|*.mpg|*.mpeg|*.vob|*.fl[icv]|*.m2v|*.mov|*.webm|*.ts|*.mts|*.m4v|*.r[am]|*.qt|*.divx)
		[ ! -f "${CACHE}.jpg" ] && \
			ffmpegthumbnailer -i "$1" -o "${CACHE}.jpg" -s 0 -q 5
		image "${CACHE}.jpg" "$2" "$3" "$4" "$5"
		;;
	*.bmp|*.jpg|*.jpeg|*.png|*.xpm|*.webp|*.tiff|*.gif|*.jfif|*.jxl|*.svg|*.dds)
		image "$1" "$2" "$3" "$4" "$5"
		;;
  *.ico)
		[ ! -f "${CACHE}.jpg" ] && \
			convert -quality 90 "$1" "${CACHE}.jxl"
		image "${CACHE}.jxl" "$2" "$3" "$4" "$5"
		;;
	*.ino)
		batorcat --language=cpp "$1"
		;;
  *) case $(file --mime-type -Lb -- "$1") in
    image/*) image "$1" "$2" "$3" "$4" "$5" ;;
    *) file -ibL "$1" | grep -q text && batorcat "$1" || file -Lb "$1" ;; 
  esac
esac
exit 0
